rule hearts{
draw{}
hearts{y 1.2 s 0.95 r 30}
}

rule draw {
TRIANGLE {flip 180}
CIRCLE{s 0.51 x 0.245  y 0.33}
CIRCLE{s 0.51 x -0.242  y 0.33}
draw { s 0.99 sat -0.01}
}